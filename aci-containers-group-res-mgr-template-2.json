{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerGroups_vincenthomecg_name": {
            "defaultValue": "vincenthomecg",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-10-01",
            "name": "[parameters('containerGroups_vincenthomecg_name')]",
            "location": "eastus",
            "properties": {
                "containers": [
                    {
                        "name": "expressapi-container",
                        "properties": {
                            "image": "vincenthome/expressapistarter:latest",
                            "ports": [
                                {
                                    "port": 80
                                }
                            ],
                            "environmentVariables": [
                                {
                                    "name": "PORT",
                                    "value": "80"
                                },
                                {
                                    "name": "HELLO",
                                    "value": "PublicContainer"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 0.5,
                                    "cpu": 1
                                }
                            }
                        }
                    },
                    {
                        "name": "expressapi-container2",
                        "properties": {
                            "image": "vincenthome/expressapistarter:latest",
                            "ports": [],
                            "environmentVariables": [
                                {
                                    "name": "PORT",
                                    "value": "5000"
                                },
                                {
                                    "name": "HELLO",
                                    "value": "PrivateContainer"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 0.5,
                                    "cpu": 1
                                }
                            }
                        }
                    }
                ],
                "ipAddress": {
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 80
                        }
                    ],
                    "type": "Public",
                    "dnsNameLabel": "[parameters('containerGroups_vincenthomecg_name')]"
                },
                "osType": "Linux"
            }
        }
    ]
}