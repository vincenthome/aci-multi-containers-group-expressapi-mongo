{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerGroupName": {
      "type": "string",
      "defaultValue": "vincenthomecg",
      "metadata": {
        "description": "Container Group name."
      }
    }
  },
  "variables": {
    "container1name": "expressapi-container",
    "container1image": "vincenthome/expressapistarter:latest",
    "container2name": "expressapi-container2",
    "container2image": "vincenthome/expressapistarter:latest"
  },
  "resources": [
    {
      "name": "[parameters('containerGroupName')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2019-12-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "containers": [
          {
            "name": "[variables('container1name')]",
            "properties": {
                "image": "[variables('container1image')]",
                "resources": {
                    "requests": {
                    "cpu": 1,
                    "memoryInGb": 0.5
                    }
                },
                "ports": [
                    {
                    "port": 8080
                    }
                ],
                "environmentVariables": [
                    {
                      "name": "PORT",
                      "value": "8080"
                    },
                    {
                      "name": "MONGOUID",
                      "secureValue": ""
                    },
                    {
                      "name": "MONGOPWD",
                      "secureValue": ""
                    },
                    {
                        "name": "HELLO",
                        "value": "PublicContainer"
                    }
                ],
            }
          },
          {
            "name": "[variables('container2name')]",
            "properties": {
                "image": "[variables('container2image')]",
                "resources": {
                    "requests": {
                    "cpu": 1,
                    "memoryInGb": 0.5
                    }
                },
                "environmentVariables": [
                    {
                        "name": "PORT",
                        "value": "5000"
                    },
                    {
                      "name": "MONGOUID",
                      "secureValue": ""
                    },
                    {
                      "name": "MONGOPWD",
                      "secureValue": ""
                    },
                    {
                        "name": "HELLO",
                        "value": "PrivateContainer"
                    }
                ]
            }
          }
        ],
        "osType": "Linux",
        "ipAddress": {
          "type": "Public",
          "dnsNameLabel": "[parameters('containerGroupName')]",
          "ports": [
            {
              "protocol": "tcp",
              "port": 8080
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "containerIPv4Address": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups/', parameters('containerGroupName'))).ipAddress.ip]"
    }
  }
}